#include <stdio.h> 
int main() {
// Y.O.U ONLINE MAKEUP SITE

//DECLARE VARIABLES
int category;    // choose between Face Make-up  or Lips
int products; // Represents  Foundation, Concealer, Lip cream & Lip tint
int shades; // Shades per product
int exit; //Exit option no.4
int quantity; // Quantity of items
float Total_price;
float price_Foundation = 384.00;
float price_Concealer = 279.00;
float price_Lipcream = 277.00;
float price_Liptint = 277.00;
char currency = 'P';
char confirm_exit; // confirming 'Y' yes or 'N' no to exit loop
int exit_program = 0; // exit loop: 0 = continue, 1 = exit 
int back_to_category = 0; // returning to selection



    
//INTRO
    printf("Welcome to Y.O.U BEAUTY Official PH \n\n");
    printf("Find the Beauty in YOU as we offer a fine array of make-up products that are formulated in South Korea, infused with skincare loving ingredients\n that is dermatologically tested and highly recommended by fellow Filipinos nationa-wide!\n\n");


do{

//CATEGORY SELECTION
    printf("Please select a category:\n1)Face Make-Up \t 2)Lips \t 3)Exit\n");
