    switch(category){
        case 1:
            printf("You have chosen Face Make-Up\n\n");  
            break;
        case 2:
            printf("You have chosen Lip Products\n");
            break;
        case 3: // SUBJECT TO CHANGE MIGHT BE REDUNDANT
           printf("You have chosen Exit.\n");
           printf("Do you confirm exit?: [y/n]\n"); //confirm message is here so that it won't print "Do you want to exit" because if placed after WHILE statement and user inputs an invalid number it will loop with the exit statement
                scanf(" %c", &confirm_exit);  
                if (confirm_exit == 'y'||confirm_exit=='Y'){
                exit_program = 1;
                 printf("Thank you for shopping please come again!\n"); // ENDING MESSAGE if user confirms exit
                 }else{
                 printf("Returning to selection\n"); // IF NO goes back to selection
                 }
             break;
        default:
            printf("Invalid, please select valid category: 1)Face Make-up\t 2)Lips\t 3)Exit\n\n");
        }
 
}while (exit_program == 0);  // if user input is yes = print thank you for shopping message / if no category question repeats
    
    printf("Please select the following products under Face Make-Up:\n1) Foundation \t 2) Concealer\t 3)Back\t 4)Exit\n\n");
    scanf("%d", &products);
    switch(products){
        case 1:
            printf("You have chosen Foundation\n");
            scanf("%d", &products);
            break;
        case 2: 
            printf("You have chosen Concealer\n");
            break;
        case 3:
            printf("Return to cateogry selection? [y/n]:\n"); //returning to CATEGORY: FACE MAKE-UP OR LIPS
            break;
        case 4:
            printf("You have chosen Exit.\n");
            printf("Do you confirm exit?: [y/n]\n"); // EXITING the LOOP
        default:
            printf("Invalid choice, please select a product\n");
    }

    //FOUNDATION SHADE
    printf("Please select Foundation shades");
    scanf("%d", &shades);
    switch(shades){
        case 1:
            printf("Shell Ivory\n");
            break;
        case 2:
            printf("Pink Sand\n");
            break;
        case 3:
            printf("Cream Beige\n");
            break;
            default: 
        printf("Invalid, please select a shade\n");
    
    }

    //CONCEALER SHADE
    printf("Please select Lip Cream shades");
    scanf("%d", &shades);
    switch(shades){
        case 1:
        printf("Light\n");
        break;
        case 2:
        printf("Medium\n");
        break;
        case 3:
        printf("Golden\n");
        break;
        default: 
        printf("Invalid, please select a shade\n");
    
    }      

    //////////////////////////////////////////////////////////////////////////////////////////////

    //LIPS CATEGORY
    printf("Please select the following products under lips:\n1)Lip Cream \t  2) Lip Tint\n\n");
    scanf("%d", &products);
    switch(products){
        case 1: 
            printf("You have chosen Lip Cream\n");
            break;
        case 2:
            printf("You have chosen Lip Tint\n");     
            break;
        case 3:
            printf("Return to cateogry selection? [y/n]:\n"); 
            break;
        case 4:
            printf("You have chosen Exit.\n");
            printf("Do you confirm exit?: [y/n]\n");
        default:
        printf("Invalid choice, please select a product\n");   

    }


    printf("Please select Lip Cream shades");
    scanf("%d", &shades);
    switch(shades){
        case 1:
        printf("Whisper\n");
        break;
        case 2:
        printf("Kindness\n");
        break;
        case 3:
        printf("Passion\n");
        break;
        default: 
        printf("Invalid, please select a shade\n");
    
    }

    printf("Please select Liptint shades");
    scanf("%d", &shades);
    switch(shades){
        case 1:
            printf("Blushing Sky\n");
            break;
        case 2:
            printf("Mist Night\n");
            break;
        case 3:
            printf("Breezy Day\n");
            break;
        default:
